<%- include('../partials/header') %>
	<h2>Add Upcoming Interview </h2>
	
		 <a href="/interviews">List of All Upcoming Interviews</a>
		
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/style.css">
<form action="/interviews" method="post">


	<table id="new">
		<tr>
			<th>
				Position: <input type="text" name="position">
			</th>
		</tr>
		<tr>
			<th>
				Pay: <input type="text" name="pay">
			</th>
		</tr>
		<tr>
			<th>
				Date of Interview: <label for="when"></label>
				<input type="date" name="when" id="when">
			</th>
		</tr>
		<tr>
			<th>
				Questions: <input type="text" name="advice">
			</th>
		</tr>
	</table>
	<style>
		#new {
			width: 100%;
			border-collapse: collapse;
			text-align: center;
		}
	
		#new th {
			padding: 10px;
		}
	
		#new input[type="text"],
		#new input[type="date"] {
			width: 100%;
			padding: 5px;
			box-sizing: border-box;
		}
	</style>
	
		



		<button type="submit">Add Interview</button>
	</form>
	<%- include('../partials/footer') %>